<h2>{{ project.name }}</h2>
<ul class="nav nav-tabs nav-stacked">
    <li{% if active == "project" %} class="active"{% endif %}>
        <a href="{{ path('gitonomyfrontend_project_show', {slug: project.slug, reference: reference }) }}">
            Overview
            {% if active == "project" %}
                <span class="pull-right">&raquo;</i>
            {% endif %}
        </a>
    </li>
    <li{% if active == "history" %} class="active"{% endif %}>
        <a href="{{ path('gitonomyfrontend_project_history', {slug: project.slug, reference: reference }) }}">
            History
            {% if active == "history" %}
                <span class="pull-right">&raquo;</i>
            {% endif %}
        </a>
    </li>
    <li{% if active == "commits" %} class="active"{% endif %}>
        <a href="{{ path('gitonomyfrontend_project_showLastCommits', {slug: project.slug, reference: reference}) }}">
            Last commits
            {% if active == "commits" %}
                <span class="pull-right">&raquo;</i>
            {% endif %}
        </a>
    </li>
    <li{% if active == "source" %} class="active"{% endif %}>
        <a href="{{ path('gitonomyfrontend_project_showTree', {slug: project.slug, reference: reference}) }}">
            Source
            {% if active == "source" %}
                <span class="pull-right">&raquo;</i>
            {% endif %}
        </a>
    </li>
</ul>
<h2>Branches</h2>
{% for data in branches %}
    <p{% if data.branch.name == reference %} style="font-weight: bold"{% endif %}>
        <a href="{{ path(route_name, route_parameters|merge({reference: data.branch.name })) }}">
            {{ data.branch.name }}
            {% if data.behind %}
                <span style="color: red;">-{{ data.behind }}</span>
            {% endif %}
            {% if data.behind or data.above %}/{% endif %}
            {% if data.above %}
                <span style="color: green;">+{{ data.above }}</span>
            {% endif %}
        </a>
        <br />
        {{ data.commit.authorDate|date_relative }}
    </p>
{% else %}
    <p><em>No branch</em></p>
{% endfor %}
