{% extends "GitonomyWebsiteBundle::layout_project.html.twig" %}

{% trans_default_domain 'project_source' %}
{% set global_navigation = 'projects' %}
{% set local_navigation = 'source' %}

{% block title 'page.blob.title'|trans({'%project%': project.name, '%path%': path}) %}

{% block project_content %}
    {% include "GitonomyWebsiteBundle:Project:_tree_header.html.twig" with {
        path:     path,
        project:  project,
        revision: revision,
        active:   'blob',
        blame:    blob.isText
    } only %}

    {{ git_blob(blob) }}

{% endblock %}
