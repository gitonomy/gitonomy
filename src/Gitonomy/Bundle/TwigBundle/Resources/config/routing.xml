<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_twig.url_generator.class">Gitonomy\Bundle\TwigBundle\Routing\GitUrlGenerator</parameter>
    </parameters>
    <services>
        <service id="gitonomy_twig.url_generator" class="%gitonomy_twig.url_generator.class%" public="false">
            <argument type="service" id="router" />
            <argument>%gitonomy_twig.url_generator.routes_names%</argument>
            <argument>%gitonomy_twig.url_generator.repository_key%</argument>
        </service>
    </services>

</container>
